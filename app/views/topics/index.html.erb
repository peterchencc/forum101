<h2>Topic list</h2>

  <div class="group">
    <%= link_to "新增主題", new_topic_path , :class => "btn btn-primary pull-right" %>
  </div>
  <div class="clearfix"></div>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th> # </th>
          <th> # </th>
          <th> # </th>
          <th> # </th>
        </tr>
      </thead>
      <tbody>
        <% @topics.each do |t| %>
        <tr>
          <td> <%= t.id %> </td>
          <td> <%= link_to t.title, topic_path(t) %> </td>
          <td> <%= t.content %> </td>
          <td> <%= t.user_id %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>



